extends ../layout/panel

block content
  h2 Add new picture
  form(action="/panel/add", method="post", enctype="multipart/form-data", class="form")
    div(class="form-group")
      label Picture file
      input(type="file", name="pictureFile", id="pictureFile", class="form-control", required)
      
    div(class="form-group")
      label Category name
      input(type="text", name="categoryName", class="form-control", id="categoryName", required)
      
      p(class="help-block") Categories used in past:
      
      ul(class="text-muted")
      each category in categories
        li 
          a(href="#", onclick="document.getElementById('categoryName').value='"+category.DISTINCT + "'") 
            = category.DISTINCT
            
    div(class="form-group")
      label Author
      input(type="text", name="author", class="form-control", id="author", required)

      p(class="help-block") Recent authors:
      
      ul(class="text-muted")
      each author in authors
        li 
          a(href="#", onclick="document.getElementById('author').value='"+author.DISTINCT + "'") 
            = author.DISTINCT
            
    div(class="form-group")
      label Description
      input(type="text", name="description", class="form-control", id="description")
    
    a(href="/panel/pictures", class="btn btn-default") Go back
    button(type="submit", class="btn btn-primary") Add